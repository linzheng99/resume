---
import type { Link, Project } from '../../../meta.config'
import ProjectDetails from './ProjectDetails.astro'
import Actions from './Actions.astro'
import SocialLink from './SocialLink.astro'

interface Details {
  situation: Project
  task: Project
  actions?: Project[]
  result?: Project
}
interface Props {
  name: string
  is?: string
  link?: Link
  details: Details
}

const {
  name,
  is,
  link,
  details: { situation, task, actions, result }
} = Astro.props
---

<div>
  <div class="flex justify-between items-center">
    <h3 class="text-2xl font-medium text-gray-600">{name}</h3>
    <div>
      <span class="font-medium text-gray-600">{is}</span>
      {link && <SocialLink icon={link.icon} value={link.value} url={link.url} />}
    </div>
  </div>
  <div class="flex flex-col gap-1">
    <ProjectDetails data={situation} />
    <ProjectDetails data={task} />
    {actions?.length && <Actions data={actions} />}
    {result && <ProjectDetails data={result} />}
  </div>
</div>
